{
   "extends": ["plugin:prettier/recommended", "../../.eslintrc"],
   "ignorePatterns": ["!**/*"],
   "env": {
      "es6": true
   },
   "parserOptions": {
      "ecmaVersion": 2018,
      "project": "apps/cdk/tsconfig.app.json"
   },
   "sourceType": "module",
   "overrides": [
      {
         "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
         "rules": {
            "no-unused-vars": "warn"
         }
      },
      {
         "files": ["*.ts", "*.tsx"],
         "rules": {}
      },
      {
         "files": ["*.js", "*.jsx"],
         "rules": {}
      }
   ],
   "rules": {
      "prettier/prettier": "error"
   }
}
